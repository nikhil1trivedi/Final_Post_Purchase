<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trivedi_dell.final_app_post_purchase.about_us"
    android:background="@drawable/spring_background">

    <Button
        android:id="@+id/subscribe_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/home_button"
        android:layout_alignBottom="@+id/home_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:text="Subscribe Now" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Post Purchase "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintVertical_bias="0.0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/about_us_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/content_text"
        android:layout_marginBottom="49dp"
        android:layout_toEndOf="@+id/subscribe_button"
        android:layout_toRightOf="@+id/subscribe_button"
        android:text="About Us "
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/content_text"
        android:layout_width="323dp"
        android:layout_height="276dp"
        android:layout_above="@+id/home_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp"
        android:text="We are an application that is designed to extend the relationship between company and consumer beyond the limits of the store. In the age of social media we strive to bring relevant content in the form of YouTube Videos and Images to your doorstep. The app in the eys of the consumer will be a tool used to not only learn more about the product from a technical standpoint but show how the product is used. "
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="150dp "
        android:layout_height="50dp"
        android:text="Back Home"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="609dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/title_text"
        android:layout_alignEnd="@+id/title_text"
        android:layout_marginBottom="21dp" />
</RelativeLayout>
